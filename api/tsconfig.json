{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2022", "DOM"],
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "dist",
    "types": ["node"],
    "resolveJsonModule": true,
    "noEmitOnError": true,
    "sourceMap": true,
    "baseUrl": "./",
    "paths": {
      "@helpers/*": ["src/helpers/*"]
    }
  },
  "include": ["src"],
  "exclude": ["dist", "node_modules"]
}
